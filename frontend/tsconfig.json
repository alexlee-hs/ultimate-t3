{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2017",
    "module": "es2020",
    "lib": [
      "es2017",
      "dom"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": false,
    "esModuleInterop": true,
    "allowJs": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules"
  ]
}